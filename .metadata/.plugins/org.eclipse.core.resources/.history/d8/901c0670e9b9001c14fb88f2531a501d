package implementacao;

import javax.swing.JOptionPane;

import beans.Pessoa;

public class ExecutarPessoa {

	public static void main(String[] args) {
		System.out.println("Iniciando...!!!");
		
		Pessoa p1 = new Pessoa();
		
		p1.nome = "Robert Moraes";
		p1.idade = 32;
		p1.cidade = "Jaboticabal";
		p1.sentimento="Nervoso";
		
		System.out.println("Dados cliente: ");
		System.out.println("Nome: "+ p1.nome+"\n"+"Idade: "+p1.idade+"\n"
				+"Cidade: "+p1.cidade);
		
		p1.comer("Almoço");
		System.out.println("Sentimento atual após comer: "+p1.sentimento);
		
		p1.dormir(5);
		System.out.println("Sentimento atual após dormir: "+p1.sentimento);
	}

}
