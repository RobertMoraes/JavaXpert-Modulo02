package beans;

public class Pessoa {
	public int id;
	public String nome;
	public int idade;
	public String sentimento;
	public String cidade;
	
	
	public void comer(String refeicao) {
		System.out.println("Tipo de refeição: "+ refeicao);
		this.sentimento = "Satisfeito!";
	}
	
	public void dormir() {
		System.out.println("Dormir");
	}
}
