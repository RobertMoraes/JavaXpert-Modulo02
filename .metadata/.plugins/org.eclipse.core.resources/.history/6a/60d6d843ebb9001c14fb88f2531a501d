package implementacao;

import javax.swing.JOptionPane;

import beans.Pessoa;

public class ExecutarPessoa {

	public static void main(String[] args) {
		System.out.println("Iniciando...!!!");
		
		Pessoa p1 = new Pessoa();
		
		p1.setNome(JOptionPane.showInputDialog(p1));
		p1.setIdade(32);
		p1.setCidade("Jaboticabal");
		p1.setSentimento("Nervoso");
		
		System.out.println("Dados cliente: ");
		System.out.println("Nome: "+ p1.getNome()+"\n"+"Idade: "+p1.getCidade()+"\n"
				+"Cidade: "+p1.getCidade());
		
		p1.comer("Almoço");
		System.out.println("Sentimento atual após comer: "+p1.getSentimento());
		
		p1.dormir(8);
		System.out.println("Sentimento atual após dormir: "+p1.getSentimento());
	}

}
